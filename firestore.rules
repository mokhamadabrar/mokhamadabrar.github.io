rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to get user data from the 'users' collection
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Function to check if a user is an admin
    function isAdmin() {
      return isAuthenticated() && getUserData(request.auth.uid).role == 'admin';
    }

    // Function to check if a user is approved
    function isApproved() {
      return isAuthenticated() && getUserData(request.auth.uid).status == 'approved';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow a user to create their own document if not authenticated (during registration)
      // and set initial status to 'unverified' and role to 'user'.
      allow create: if !isAuthenticated() && request.resource.data.status == 'unverified' && request.resource.data.role == 'user';

      // Allow a user to read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Allow admin to update any user's document (e.g., change status to 'approved')
      allow update: if isAdmin();

      // Deny delete for all users
      allow delete: if false;
    }

    // Rules for the 'observations' collection
    match /observations/{observationId} {
      // Allow read/write only for approved users
      allow read, write: if isApproved();
    }

    // Deny access to any other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
